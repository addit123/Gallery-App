<div class="container">
<h2 class="text-center mt-5">Log in</h2>
<hr>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.label :email, class:"mt-3 mb-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder:"Enter Email",class: "form-control mb-4"%>
  </div>

  <div class="field form-group">
    <%= f.label :password , class:"mt-3 mb-2"%><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder:"Enter Password",class: "form-control mb-4" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class:"fw-bold" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", data: {turbo: false}, class: "btn btn-warning mb-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>