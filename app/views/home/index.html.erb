<div class ="content">
  <div class="container">
    <h1 class="text-center my-5"> All Publish Album</h1>
    <hr>
      <div class="search mt-4 d-flex justify-content-end">
      <%= search_form_for @q, url: root_path do |f|%>
        <%= f.search_field :tags_name_or_name_eq , placeholder: "Search By Tag or Name", class:"rounded"%>
        <%= f.submit "Search", class:"rounded" %>
      <% end %>
    </div>
      <div class= "row mt-5">
        <% @albums.each do |album| %>
          <div class = "col-lg-4 text-center shadow-lg p-3 mb-5 bg-body rounded">
            <div class="card m-3 ">
              <h3 class="card-title text-dark">
                <strong>Album:</strong>
                <%= album.title %>
              </h3>
              <%if album.cover_image.attached? %>
                <div class="card-header">
                  <%=link_to album_path(id: album.id) do %>
                    <%= image_tag album.cover_image ,  class: 'img-fluid' %>
                  <%end%>
                </div>
              <%end%>
              <div class="card-body">
                <h5 class="card-title">
                  <center> <strong>Name: </strong><%= album.name %><br>
                  </center>
                  <center><strong>Description: </strong><%= album.description %></center>
                  <hr>
                  <strong>Created at: </strong>
                  <span class="text-muted"><%= album.created_at.to_date%></span>
                  <br>
                  <br>
                  <strong>Total Images: </strong>
                  <span class="text-muted"><%= album.images.count%></span>
                  <br>
                  <br>
                  <strong>Tag: </strong>
                  <span class="text-muted"><%= album.all_tags %></span>
                </div>
              </div>
              <br>
            </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>
