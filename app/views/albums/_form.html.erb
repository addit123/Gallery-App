<div class="container bg-light p-5 shadow-lg p-3 mb-5 bg-body rounded" >
  <%= form_with(model: album) do |form| %>
    <div class="form-group">
      <%= form.label :title,class:'form-label fw-bold' %>
      <%= form.text_field :title,  class: "form-control", placeholder: "Title" %>
      <% album.errors.full_messages_for(:title).each do |message| %>
        <p class = "text-danger error"><%= message %></p>
      <% end %>
    </div>
    <div  class=" form-group">
      <%= form.label :name, class:'form-label fw-bold' %>
      <%= form.text_field :name, class: "form-control", placeholder: "Name" %>
      <% album.errors.full_messages_for(:name).each do |message| %>
        <p class = "text-danger"><%= message %></p>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.label :description, class:'form-label fw-bold' %>
      <%= form.text_field :description , class: "form-control", placeholder: "Description"%>
      <% album.errors.full_messages_for(:description).each do |message| %>
        <p class = "text-danger"><%= message %></p>
      <% end %>
    </div>
    <div class="field">
      <%= form.label :Tags, class:'form-label fw-bold text-dark' %>
      <%= form.text_field :all_tags, class: "form-control" , placeholder:"Tags" %>
      <% album.errors.full_messages_for(:all_tags).each do |message| %>
        <p class = "text-danger"><%= message %></p>
      <% end %>
    </div>
    <br>
    <div class="form-group">
      <%= form.label :cover_photo , class:'form-label fw-bold'%>
      <%= form.file_field :cover_image, class:'form-control w-auto' %>
      <% album.errors.full_messages_for(:cover_image).each do |message| %>
        <p class = "text-danger"><%= message %></p>
      <% end %>
    </div>
    <div  class="form-group">
      <%= form.label :image ,class:'form-label fw-bold'%>
      <%= form.file_field :images , multiple: true,  class:'form-control w-auto' %>
    </div>
    <br>
    <div  class="form-group">
      <%= form.label :Publish %>
      <%= form.check_box :publish %>
    </div>
    <br>
    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>
